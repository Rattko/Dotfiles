[init]
    # Set the default branch to 'main'
    defaultBranch = main

[core]
    # Set the default text editor to 'Neovim'
    editor = nvim

[commit]
    # Enable GPG signing
    gpgSign = true

[pull]
    # Always use `--rebase` with `git pull`
    rebase = true

[tag]
    # Enable GPG signing
    gpgSign = true

[diff]
    # Detect copies as well as renames
    renames = copies

[user]
    # Set a username
    name = Radovan Haluska

    # Set an e-mail
    email = radovan.haluska1@gmail.com

    # Set a GPG key
    signingKey = 18ADF0282D22B4E9

[alias]
    # Shorten frequently used commands
    st = status
    ci = commit
    stlt = stash list
    stsw = stash show
    stph = stash push
    stpp = stash pop
    stdp = stash drop
